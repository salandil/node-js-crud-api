{
	"compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    
    "experimentalDecorators": true,
    "esModuleInterop": true,

    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}