{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "crud-api",
  "engines": {
    "node": ">=22.14.0"
  },
  "type": "module",
  "main": "./src/app.ts",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon --exec node --loader ts-node/esm --no-warnings=all ./src/app.ts",
    "start:prod": "npm run build && cross-env NODE_ENV=production node ./dist/bundle.js",
    "build": "webpack",
    "test": "jest"
  },
  "nodemonConfig": {
    "ext": "ts",
    "ignore": [
      "./dist/"
    ]
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  }
}
